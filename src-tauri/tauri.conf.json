{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tidewave",
  "version": "0.1.0",
  "identifier": "ai.tidewave.desktop",
  "build": {
    "frontendDist": null
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "nsis",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/AppIcon.icon"
    ],
    "fileAssociations": [
      {
        "ext": ["tidewave"],
        "mimeType": "text/plain",
        "rank": "Default"
      }
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/installer-header.bmp",
        "sidebarImage": "icons/installer-sidebar.bmp"
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["tidewave"]
      }
    },
    "cli": {
      "description": "Tidewave CLI",
      "args": [
        {
          "name": "port",
          "description": "Specify the port where Tidewave Web will be served.",
          "short": "p",
          "takesValue": true
        },
        {
          "name": "debug",
          "description": "Enable debug logging",
          "short": "d",
          "takesValue": false
        }
      ]
    }
  }
}
